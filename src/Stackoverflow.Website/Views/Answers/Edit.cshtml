@model EditAnswerViewModel
@{
    ViewData["Title"] = "Edit Answer";
}

@section Styles {
    <link rel="stylesheet" href="~/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css" />
}

<h2>Edit Answer</h2>
<br />

<form method="post" asp-action="Edit" asp-controller="Answers">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label class="col-form-label" asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description" placeholder="answer description" rows="10"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code">Description</label>
        <textarea class="form-control" asp-for="Code" placeholder="answer code" rows="10"></textarea>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div><br />
    <button type="submit" class="btn btn-primary fz-1-3rem w-25">Edit</button>
</form>

@section Scripts {
    <script src="~/plugins/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>
}